{
  "name": "llm-exe",
  "version": "2.0.0-beta.7",
  "description": "Simplify building LLM-powered apps with easy-to-use base components, supporting text and chat-based prompts with handlebars template engine, output parsers, and flexible function calling capabilities.",
  "keywords": [
    "ai",
    "llm",
    "openai",
    "anthropic",
    "bedrock",
    "llama",
    "gpt-3.5-turbo",
    "gpt-4",
    "claude",
    "chain",
    "prompt",
    "agent"
  ],
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "tsc": "(concurrently \"tsc --p ./tsconfig.json -w\" \"tsc-alias -p tsconfig.json -w\")",
    "tsc-build": "(concurrently \"tsc --p ./tsconfig-build.json -w\" \"tsc-alias -p tsconfig-build.json -w\")",
    "tsc-ci": "tsc --project ./tsconfig.json && tsc-alias -p ./tsconfig.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --coverage --forceExit",
    "docs:dev": "vitepress dev docs --host",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint",
    "format:check": "prettier --check \"src\"",
    "format:write": "prettier --write \"src\""
  },
  "author": "Greg Reindel",
  "license": "MIT",
  "dependencies": {
    "@aws-crypto/sha256-js": "5.2.0",
    "@aws-sdk/credential-providers": "3.624.0",
    "@smithy/signature-v4": "4.1.0",
    "exponential-backoff": "3.1.1",
    "handlebars": "4.7.8",
    "json-schema-to-ts": "3.1.0",
    "jsonschema": "1.4.1",
    "node-fetch-commonjs": "^3.3.2",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@shikijs/vitepress-twoslash": "^1.12.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.2",
    "@types/json-schema": "^7.0.11",
    "@types/node": "17.0.23",
    "@types/prettier": "2.6.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.6.6",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.8.4",
    "vitepress": "^1.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gregreindel/llm-exe"
  },
  "homepage": "https:/llm-exe.com"
}
